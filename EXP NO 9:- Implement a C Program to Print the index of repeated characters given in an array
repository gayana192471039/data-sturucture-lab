#include <stdio.h>
#include <string.h>
int main() {
    char s[1024];
    printf("Enter string: ");
    if (!fgets(s, sizeof(s), stdin)) return 0;
    s[strcspn(s, "\n")] = 0;
    int len = strlen(s);
    int printed[256] = {0};
    for (int ch = 0; ch < 256; ++ch) {
        int count = 0;
        for (int i = 0; i < len; ++i) if ((unsigned char)s[i] == ch) ++count;
        if (count > 1) {
            printf("Character '%c' repeats at indices: ", (char)ch);
            for (int i = 0; i < len; ++i) {
                if ((unsigned char)s[i] == ch) printf("%d ", i);
            }
            printf("\n");
        }
    }
    return 0;
}
