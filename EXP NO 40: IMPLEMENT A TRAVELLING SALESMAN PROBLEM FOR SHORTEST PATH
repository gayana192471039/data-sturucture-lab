#include <stdio.h>
#define INF 999

int main() {
    int n, i, j, source;
    int cost[20][20], dist[20], visited[20], count, min, next;

    printf("Enter number of vertices: ");
    scanf("%d", &n);

    printf("Enter the adjacency matrix (use 999 for no path):\n");
    for(i = 0; i < n; i++)
        for(j = 0; j < n; j++)
            scanf("%d", &cost[i][j]);

    printf("Enter the source vertex (0 to %d): ", n-1);
    scanf("%d", &source);

    // Initialize
    for(i = 0; i < n; i++) {
        dist[i] = cost[source][i];
        visited[i] = 0;
    }

    dist[source] = 0;
    visited[source] = 1;
    count = 1;

    // Dijkstraâ€™s algorithm
    while(count < n) {
        min = INF;

        for(i = 0; i < n; i++)
            if(dist[i] < min && !visited[i]) {
                min = dist[i];
                next = i;
            }

        visited[next] = 1;

        for(i = 0; i < n; i++)
            if(!visited[i] && min + cost[next][i] < dist[i])
                dist[i] = min + cost[next][i];

        count++;
    }

    printf("Shortest distance from source %d:\n", source);
    for(i = 0; i < n; i++)
        printf("To %d = %d\n", i, dist[i]);

    return 0;
}
